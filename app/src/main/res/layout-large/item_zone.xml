            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/common_bottom_green_bg"
            android:text="去投票"
            android:textColor="@color/white" />

    </LinearLayout>

    <RelativeLayout
