<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/life_circle_release"
    android:orientation="vertical"
    android:paddingBottom="6dp">

    <View
        android:id="@+id/top_view_bar"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="#f1f5f7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="11dp">

            <xj.property.widget.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/head_portrait_personage" />

            <ImageView
                android:id="@+id/iv_genius_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@+id/avatar"
                android:layout_alignTop="@+id/avatar"
                android:src="@drawable/niurenlife"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-5dp"
                android:src="@drawable/life_circle_bangzhu_icon"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/r1"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/r1"
            android:text="中文测试"
            android:textColor="@color/sys_darker_66_theme_text_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_zan_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_username"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/tv_username"
            android:src="@drawable/life_circle_zambia_red"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_sueper_zan_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_username"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/iv_zan_icon"
            android:src="@drawable/lifecircle_super_zambia_red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_share_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_username"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/iv_sueper_zan_icon"
            android:text=""
            android:textColor="#c5c5c5"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_valuename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/r1"
            android:text="人品值："
            android:textColor="#858585"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_charter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_valuename"
            android:layout_alignTop="@+id/tv_valuename"
            android:layout_below="@+id/tv_username"
            android:layout_toRightOf="@+id/tv_valuename"
            android:src="@drawable/lifecircle_bigger_likeicon" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_charter"
            android:layout_alignTop="@+id/tv_valuename"
            android:layout_below="@+id/tv_username"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/iv_charter"
            android:text=""
            android:textColor="@color/sys_darker_69_theme_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/bangzhu_privilege_llay"
            android:layout_alignRight="@+id/bangzhu_privilege_llay"
            android:layout_alignTop="@+id/tv_share_goods"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="right|center_vertical"
            android:text="5-2"
            android:textColor="#7b7c7e"
            android:textSize="13sp" />


        <LinearLayout
            android:id="@+id/bangzhu_privilege_llay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_valuename"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/iv_operation"
                android:layout_width="13dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/drop_down_icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bangzhu_privilege_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特权"
                android:textColor="#15BE61"
                android:textSize="12sp"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_bangzhu_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:paddingTop="2dp"
                android:src="@drawable/drop_down_icon"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_valuename"
            android:layout_below="@+id/tv_valuename"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp">

            <xj.property.widget.FilterFlowLayout
                android:id="@+id/lifecircle_filterflowlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:horizontalGap="10dp"
                app:maxLines="1">

            </xj.property.widget.FilterFlowLayout>

            <ImageView
                android:id="@+id/lifecircle_more_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/lifecircle_filterflowlay"
                android:src="@drawable/lifetcircle_label_more"
                android:visibility="gone" />
        </RelativeLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="9dp"
        android:gravity="left|top"
        android:lineSpacingExtra="5dp"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/sys_darker_66_theme_text_color"
        android:textSize="15sp"
        android:visibility="visible" />

    <TextView
