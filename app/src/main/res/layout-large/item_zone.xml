                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/lifecircle_comment_greyspeech"
                android:drawablePadding="5dp"
                android:text="进入群聊"
                android:textColor="@color/sys_darker_6a_theme_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_zambia_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:drawableLeft="@drawable/green_like_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="赞人品 (99)"
                android:textColor="@color/sys_green_theme_text_color"
                android:textSize="14dp" />
        </LinearLayout>

