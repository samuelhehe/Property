<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/ic_launcher"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:clickable="false"
        android:focusable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mine_title"
                style="@style/MyTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:gravity="left|center_vertical"
                android:text="人品值："
                android:textColor="#4cbe50"
                android:textSize="17sp" />

            <ImageView

                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="3dp"
                android:src="@drawable/lifecircle_bigger_likeicon"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_value_num"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:focusableInTouchMode="false"
                android:scrollHorizontally="false"
                android:textColor="#fa5344"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_mine_content"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:focusableInTouchMode="false"
                android:gravity="right|center_vertical"
                android:scrollHorizontally="false"
                android:textColor="#4cbe50"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="13dp"
                android:background="@drawable/me_arrow"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="matrix" />
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/mine_line"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_gravity="bottom"
            android:background="@color/bg_color"
            android:clickable="false"
            android:focusable="false"
            android:paddingRight="5dp" />
    </FrameLayout>

</LinearLayout>