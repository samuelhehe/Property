<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/vote_result_percent_llay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/vote_result_info_llay"
            android:layout_marginTop="0dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/vote_result_percent_left_llay"
                android:layout_width="0dp"
                android:layout_height="11dp"
                android:layout_weight="0.5"
                android:background="@drawable/vote_index_result_shape_01"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vote_result_percent_right_llay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.99"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vote_right_percent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="50%"
                    android:textColor="@color/sys_darker_68_theme_text_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/vote_result_info_llay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vote_result_pername_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="麻辣烫"
                android:textColor="@color/sys_darker_67_theme_text_color" />

            <ImageView
                android:id="@+id/vote_result_percent_chosed_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:background="@drawable/vote_item_checked"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/vote_result_percent_llay"
            android:layout_marginTop="4dp"
            android:background="@color/bg_color"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>