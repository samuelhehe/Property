<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/sys_def_light_theme_bg_color"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="13dp"

        >
        <!--android:background="@drawable/lifecircle_details_head_bgtwo"-->
        <FrameLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">


            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <xj.property.widget.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/default_avatar" />

                <ImageView
                    android:id="@+id/iv_user_type_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-6dp"
                    android:src="@drawable/me_bangzhu_icon"
                    android:visibility="invisible" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/praise_rp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="@dimen/zanrp_marginright"
                android:background="@drawable/tags_a2b_praise_btn"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_zb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/tags_a2b_praise_heart"
                    android:drawablePadding="5dp"
                    android:text="赞人品"
                    android:textColor="#FF9277"
                    android:textSize="14dp" />

            </LinearLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/tv_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:text="姓名"

            android:textColor="@color/sys_gray_theme_text_color"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人品值："
                android:textColor="@color/sys_gray_theme_text_color"
                android:textSize="@dimen/lifecircle_tv_title" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/lifecircle_bigger_likeicon"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_person_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="200"
                android:textColor="#fa5344"
                android:textSize="@dimen/lifecircle_tv_title" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_character_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="打败了40%的本小区居民！"
            android:textColor="@color/sys_gray_theme_text_color"
            android:textSize="@dimen/lifecircle_tv_title" />
    </LinearLayout>
    <!--    <View
            android:layout_width="match_parent"
            android:layout_height="6dp"/>-->
</LinearLayout>