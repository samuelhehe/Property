<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="287dp"
    android:layout_height="278dp"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册后，开启全新体验"
            android:textColor="#373737"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            >
            <ImageView
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_gravity="right"
                android:src="@drawable/pop_login_sun"
                android:layout_marginRight="38dp"
                android:layout_marginTop="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="为了准确快速的为您服务"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:textColor="#b6b6b6"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="帮帮需要您的注册信息"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:textColor="#b6b6b6"
                    android:layout_marginTop="6dp"/>
                <Button
                    android:id="@+id/btn_register_now"
                    android:layout_width="165dp"
                    android:layout_height="46dp"
                    android:background="#f6ac5c"
                    android:text="马上注册"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="24dp"
                    />
            </LinearLayout>
        </FrameLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:background="#74c543"
        android:orientation="horizontal"
        android:layout_marginTop="23dp"
        >

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="#63a93a" />

        <TextView
            android:id="@+id/tv_have_an_account"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已有账号"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>
