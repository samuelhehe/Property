<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_schmeme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="352dp"
            android:layout_height="131dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/plan_title" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="11dp"
            android:textSize="20dp"
            android:textColor="#4B4C50"
            android:text="由帮帮合作商家免费为您定制" />

        <ImageView
            android:id="@+id/iv_scheme"
            android:layout_width="352dp"
            android:layout_height="match_parent"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/fitment_plan" />

    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="以上服务不收取任何费用"
        android:textSize="14dp"
        android:textColor="#A3A3A3"
        android:gravity="center"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        android:background="#eeeeee" />

    <ImageView
        android:id="@+id/iv_experience"
        android:layout_width="352dp"
        android:layout_height="131dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/fitment_experience" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#4B4C50"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:text="帮帮已为您挑选以下商家希望他们是您的选择之一"
        android:layout_marginBottom="13dp"/>

</LinearLayout>

        

