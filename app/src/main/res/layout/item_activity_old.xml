<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="0.7dp"
            android:layout_height="30dp"
            android:background="#e8e6e3" />

        <xj.property.widget.CircleImageView
            android:id="@+id/iv_activities_small_circle"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@color/activities_cricle_small_color1" />

        <ImageView
            android:layout_width="0.7dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#e8e6e3" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/tv_join_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="31"
            android:textColor="#1d1d26"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/iv_xie_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/tv_join_num"
            android:background="@drawable/black_xie_line" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@id/iv_xie_line"
            android:text="人"
            android:textColor="#939396"
            android:textSize="10sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/tv_title_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="标题标题标题标题标题"
            android:textColor="#4e4d52"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>


            <ImageView
                android:id="@+id/tv_status_activity"
                android:layout_width="62dp"
                android:layout_height="25dp"
                android:layout_gravity="top|right"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/activity_check"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/activity_clock"
                android:drawablePadding="7dp"
                android:text="活动时间"
                android:textColor="#a1a1a1"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@drawable/activity_position"
                    android:drawablePadding="7dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#a1a1a1"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="活动地址活动地址活动"
                android:textColor="#666666"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_isread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/activity_new_icon" />

        <ImageView
            android:id="@+id/iv_bangzhu_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/lifecircle_super_zambia_red"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>