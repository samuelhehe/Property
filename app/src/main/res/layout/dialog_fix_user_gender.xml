<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dip"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#ffffff">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="30dp"
        android:text="性別"
        android:background="#ffffff"
        android:textColor="@color/chat_search_text"
        android:textSize="22sp" />

    <View android:layout_height="1px"
          android:layout_gravity="center_horizontal"
          android:background="@color/btn_gray_pressed"
          android:layout_width="280dp"></View>
    <RelativeLayout
        android:id="@+id/rl_fix_gender_man"
        android:paddingRight="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="30dp"
            android:text="男"
            android:background="#ffffff"
            android:textColor="@color/backgroundcolor"
            android:textSize="22sp"
            />

        <ImageView
            android:id="@+id/iv_man"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/me_sex_select"/>

        </RelativeLayout>



    <View android:layout_height="1px"
          android:layout_gravity="center_horizontal"
          android:background="@color/bottom_text_color_normal"
          android:layout_width="280dp"></View>
    <RelativeLayout
        android:id="@+id/rl_fix_gender_woman"
        android:paddingRight="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="30dp"
            android:text="女"
            android:background="#ffffff"
            android:textColor="@color/backgroundcolor"
            android:textSize="22sp"
            />

        <ImageView
            android:id="@+id/iv_woman"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/me_sex_select"/>

    </RelativeLayout>


</LinearLayout>