<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/me_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/metop">

                <!--  <xj.property.widget.CircleImageView
                      android:id="@+id/iv_avatar"
                      android:layout_width="@dimen/mehead"
                      android:layout_height="@dimen/mehead"
                      android:src="@drawable/me_face_nologin"
                      android:layout_gravity="center_horizontal"
                      />-->
                <FrameLayout
                    android:id="@+id/ll1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <xj.property.widget.CircleImageView
                        android:id="@+id/im"

                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:src="@color/white"
                        android:visibility="gone" />

                    <xj.property.widget.CircleImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_gravity="center"
                        android:src="@drawable/me_face_nologin" />


                </FrameLayout>

                <Button
                    android:id="@+id/btn_login_meFragment"
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:layout_below="@+id/iv_avatar"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/me_login_bg"
                    android:gravity="center"
                    android:text="注册/登录"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_desc_meFragment"
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_avatar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="上传真实头像，更受欢迎！"
                    android:textColor="#c1fdc4"
                    android:textSize="18sp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- <LinearLayout
                 android:id="@+id/ll_mine"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"></LinearLayout>-->


            <LinearLayout
                android:id="@+id/ll_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/ll_myrp"
                    android:layout_width="match_parent"
                    android:layout_height="74dp">

                    <LinearLayout
                        android:id="@+id/ll_rp_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14dp"
                                android:text="人品值："
                                android:textColor="#4cbe50"
                                android:textSize="17sp" />

                            <ImageView

                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="3dp"
                                android:clickable="false"
                                android:focusable="false"
                                android:scaleType="centerCrop"
                                android:src="@drawable/lifecircle_bigger_likeicon" />

                            <TextView
                                android:id="@+id/tv_value_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fa5344"
                                android:textSize="17sp" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_rp_percent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center_horizontal|left"
                            android:paddingRight="20dp"
                            android:paddingTop="0dp"
                            android:textColor="#4cbe50"
                            android:textSize="17sp" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/me_arrow"
                        android:visibility="visible" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_color" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#f1f5f7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="74dp">

                        <LinearLayout
                            android:id="@+id/ll_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="13dp"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="12dp"
                                android:text="人品值："
                                android:textColor="#4cbe50"
                                android:textSize="@dimen/lifecircle_tv_title" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="1dp"
                                android:clickable="false"
                                android:focusable="false"
                                android:scaleType="centerCrop"
                                android:src="@drawable/lifecircle_bigger_likeicon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:focusableInTouchMode="false"
                                android:scrollHorizontally="false"
                                android:textColor="#fa5344"
                                android:textSize="@dimen/lifecircle_tv_title" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_ll"
                            android:layout_weight="1"
                            android:focusableInTouchMode="false"
                            android:gravity="left|center_vertical"
                            android:scrollHorizontally="false"
                            android:text="123456"
                            android:textColor="#4cbe50"
                            android:textSize="@dimen/lifecircle_tv_title" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="13dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/me_arrow"
                            android:visibility="visible" />
                    </RelativeLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_gravity="bottom"
                        android:background="#f1f5f7"
                        android:clickable="false"
                        android:focusable="false"
                        android:paddingRight="5dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_bangbangbi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/bangbangbi"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="14dp"
                                android:gravity="left|center_vertical"
                                android:text="帮帮币"
                                android:textColor="#464646"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/tv_newbangbi"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_toRightOf="@+id/bangbangbi"
                                android:background="@drawable/unread_count_bg"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_bangbangbi"
                                android:layout_width="0dp"
                                android:layout_height="24dp"
                                android:layout_weight="1"
                                android:focusableInTouchMode="false"
                                android:gravity="right"
                                android:scrollHorizontally="false"
                                android:text="123456456"
                                android:textColor="#ff7e00"
                                android:textSize="17sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="14dp"
                                android:background="@drawable/me_arrow"
                                android:clickable="false"
                                android:focusable="false"
                                android:scaleType="matrix" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="#f1f5f7" />

                </LinearLayout>


                <include android:id="@+id/frg_me_bangzhu_election_llay"
                    layout="@layout/common_frg_me_bangzhu_election_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include android:id="@+id/frg_me_invite_neifhbor_lay"
                    layout="@layout/common_frg_me_bangzhu_invite_neighbors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_mine_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="个人设置"
                        android:textColor="#464646"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_mine_content"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:scrollHorizontally="false"
                        android:textColor="#9f9f9f"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/me_arrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="matrix" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/mine_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_sianature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="个性签名"
                        android:textColor="#464646"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_sianature"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:scrollHorizontally="false"
                        android:textColor="#9f9f9f"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/me_arrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="matrix" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bangbangquan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="帮帮券"
                        android:textColor="#464646"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_bangbgangquan"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:scrollHorizontally="false"
                        android:textColor="#9f9f9f"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/me_arrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="matrix" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_callback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="给帮帮留言"
                        android:textColor="#464646"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_callback"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:scrollHorizontally="false"
                        android:textColor="#9f9f9f"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/me_arrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="matrix" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mylifecircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="我的生活圈"
                        android:textColor="#464646"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_mylifecircle"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:scrollHorizontally="false"
                        android:textColor="#9f9f9f"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/me_arrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="matrix" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_versionupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="版本更新"
                        android:textColor="#464646"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_versionupdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="60dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/new_tip_icon"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_versionupdate"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:focusableInTouchMode="false"
                            android:scrollHorizontally="false"
                            android:text=""
                            android:textColor="#9f9f9f"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/me_arrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="matrix" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>