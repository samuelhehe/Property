<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#80000000" >

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/ll_weixinquan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:focusable="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/ib_weixinquan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:focusable="false"
                android:clickable="false"
                android:layout_centerInParent="true"
                android:background="@drawable/weixin1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信朋友圈"
                android:textColor="#666666"
                android:layout_marginTop="9dp"
                android:textSize="12dp"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:layout_marginTop="53dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/ib_wechat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:focusable="false"
                android:clickable="false"
                android:background="@drawable/weixin"
                android:layout_centerInParent="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信好友"
                android:textColor="#666666"
                android:layout_marginTop="9dp"
                android:textSize="12dp"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:layout_marginTop="53dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/ib_weibo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:focusable="false"
                android:clickable="false"
                android:background="@drawable/sina"
                android:layout_centerInParent="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新浪微博"
                android:textColor="#666666"
                android:layout_marginTop="9dp"
                android:textSize="12dp"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            android:clickable="true"
            android:gravity="center"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/ib_qq"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:focusable="false"
                android:clickable="false"
                android:background="@drawable/qq"
                android:layout_centerInParent="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ好友"
                android:textColor="#666666"
                android:layout_marginTop="9dp"
                android:textSize="12dp"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#999999"/>
    <TextView
        android:id="@+id/share_text"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#ffffff"
        android:text="取消"
        android:textSize="18dp" />

</LinearLayout>