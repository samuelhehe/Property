<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:minHeight="92dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="0.7dp"
            android:layout_height="30dp"
            android:background="#e8e6e3" />

        <xj.property.widget.CircleImageView
            android:id="@+id/iv_activities_small_circle"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <ImageView
            android:layout_width="0.7dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#e8e6e3" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:minHeight="92dp">

        <LinearLayout
            android:id="@+id/left_nums_llay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_join_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31"
                android:textColor="#1d1d26"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/iv_xie_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-2dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/black_xie_line" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:layout_marginLeft="-3dp"
                android:layout_marginBottom="2dp"
                android:textColor="#939396"
                android:textSize="10sp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/left_nums_llay"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/left_nums_llay"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_title_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="标题标题标题标题标题"
                android:textColor="#4e4d52"
                android:textSize="17sp" />


            <ImageView
                android:id="@+id/iv_bangzhu_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_title_activity"
                android:layout_marginTop="0dp"
                android:src="@drawable/lifecircle_super_zambia_red"
                android:visibility="visible" />


            <LinearLayout
                android:id="@+id/activity_time_address_llay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_activity"
                android:layout_marginTop="11dp"
                android:layout_toLeftOf="@+id/iv_bangzhu_zan"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/activity_clock"
                    android:drawablePadding="7dp"
                    android:text="活动时间"
                    android:textColor="#a1a1a1"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_address_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:drawableLeft="@drawable/activity_position"
                        android:drawablePadding="7dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#a1a1a1"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="活动地址活动地址活动"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:visibility="gone" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/panic_has_purchase_llay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_time_address_llay"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="4dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/welfare_purchase_hasgoturs_lv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal">


                    </LinearLayout>

                </LinearLayout>

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0.3dp"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:background="@color/bg_color" />-->
            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_isread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/activity_new_icon" />

    </RelativeLayout>


</LinearLayout>