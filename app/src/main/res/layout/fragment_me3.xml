<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_frg_me_headtop" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/me_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#fff"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/user_info_rpz_rlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/user_info_rlay"
                        android:layout_width="match_parent"
                        android:layout_height="79dp">

                        <RelativeLayout
                            android:id="@+id/frag_userinfo_headicon_rlay"
                            android:layout_width="54dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <xj.property.widget.CircleImageView
                                android:id="@+id/iv_avatar"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                android:layout_gravity="center"
                                android:src="@drawable/default_avatar" />

                            <ImageView
                                android:id="@+id/frag_meinfo_grade_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_avatar"
                                android:layout_marginTop="-15dp"
                                android:src="@drawable/me_bangzhu_icon"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/frag_haveno_reg_rlay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_toRightOf="@id/frag_userinfo_headicon_rlay"
                            android:descendantFocusability="blocksDescendants"
                            android:visibility="visible">

                            <Button
                                android:id="@+id/btn_login_meFragment"
                                android:layout_width="92dp"
                                android:layout_height="43dp"
                                android:textSize="17sp"
                                android:background="@drawable/fragment_me_gray_loginin_bt"
                                android:text="注册/登录" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/frag_meinfo_rpz_rlay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@id/frag_userinfo_headicon_rlay"
                            android:descendantFocusability="blocksDescendants"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/btn_desc_meFragment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="李小壯"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:id="@+id/ll_myrp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/btn_desc_meFragment"
                                android:layout_marginTop="12dp"
                                android:gravity="left"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="人品值："
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_value_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#fa5344"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="3dp"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/lifecircle_bigger_likeicon" />

                            </LinearLayout>


                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/bg_color" />

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/frag_rpz_percent_llay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_info_rlay"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_rp_percent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|left"
                            android:paddingRight="20dp"
                            android:paddingTop="0dp"
                            android:textColor="#4cbe50"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="14dp"
                            android:src="@drawable/me_arrow"
                            android:visibility="visible" />

                    </LinearLayout>


                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#f1f5f7" />


                <include
                    android:id="@+id/frg_me_bangzhu_election_llay"
                    layout="@layout/common_frg_me_bangzhu_election_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />

                <include
                    android:id="@+id/frg_me_invite_neifhbor_lay"
                    layout="@layout/common_frg_me_bangzhu_invite_neighbors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_bangbangbi"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/bangbangbi"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:gravity="left|center_vertical"
                                android:text="帮帮币"
                                android:textColor="#464646"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_newbangbi"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_toRightOf="@+id/bangbangbi"
                                android:background="@drawable/unread_count_bg"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_bangbangbi"
                                android:layout_width="0dp"
                                android:layout_height="24dp"
                                android:layout_weight="1"
                                android:focusableInTouchMode="false"
                                android:gravity="right"
                                android:scrollHorizontally="false"
                                android:text=""
                                android:textColor="#ffa200"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="14dp"
                                android:background="@drawable/me_arrow"
                                android:clickable="false"
                                android:focusable="false"
                                android:scaleType="matrix" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/bg_color"
                        android:clickable="false"
                        android:focusable="false"
                        android:paddingRight="5dp" />

                    <LinearLayout
                        android:id="@+id/ll_bangbangquan"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/bangbangquan_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="14dp"
                                android:gravity="left|center_vertical"
                                android:text="帮帮券"
                                android:textColor="#464646"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/bangbangquan_unread_tv"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginTop="16dp"
                                android:layout_toRightOf="@+id/bangbangquan_tv"
                                android:background="@drawable/unread_count_bg"
                                android:visibility="invisible" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_bangbgangquan"
                                android:layout_width="0dp"
                                android:layout_height="24dp"
                                android:layout_weight="1"
                                android:focusableInTouchMode="false"
                                android:gravity="right"
                                android:scrollHorizontally="false"
                                android:text=""
                                android:textColor="#ffa200"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="14dp"
                                android:background="@drawable/me_arrow"
                                android:clickable="false"
                                android:focusable="false"
                                android:scaleType="matrix" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="#f1f5f7" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_set"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_mine_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="个人设置"
                        android:textColor="#464646"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_mine_content"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:scrollHorizontally="false"
                        android:textColor="#9f9f9f"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/me_arrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="matrix" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/mine_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_sianature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="个性签名"
                        android:textColor="#464646"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_sianature"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:scrollHorizontally="false"
                        android:textColor="#9f9f9f"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/me_arrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="matrix" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_callback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="给帮帮留言"
                        android:textColor="#464646"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_callback"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:scrollHorizontally="false"
                        android:textColor="#9f9f9f"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/me_arrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="matrix" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mylifecircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="我的生活圈"
                        android:textColor="#464646"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_mylifecircle"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="right|center_vertical"
                        android:scrollHorizontally="false"
                        android:textColor="#9f9f9f"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/me_arrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="matrix" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_versionupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="版本更新"
                        android:textColor="#464646"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_versionupdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="60dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/new_tip_icon"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_versionupdate"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:focusableInTouchMode="false"
                            android:scrollHorizontally="false"
                            android:text=""
                            android:textColor="#9f9f9f"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/me_arrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:scaleType="matrix" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_gravity="bottom"
                    android:background="@color/bg_color"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingRight="5dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>