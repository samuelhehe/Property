<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/avatar_container"
            android:layout_width="@dimen/height_row_weixin"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">

            <xj.property.widget.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/message_status_tv"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="top|right"
                android:layout_marginTop="2dp"
                android:background="@drawable/popupdrawable"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/avatar_container"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:padding="7dp"
            android:text=""
            android:textColor="@color/sys_darker_66_theme_text_color"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>