<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sys_def_light_theme_bg_color"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="13dp">
        <!--android:background="@drawable/lifecircle_details_head_bgtwo"-->
        <FrameLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">


            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <xj.property.widget.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center"
                    android:src="@drawable/head_portrait_personage" />

                <ImageView
                    android:id="@+id/iv_user_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-5dp"
                    android:src="@drawable/me_bangzhu_icon"
                    android:visibility="gone" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/praise_rp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="@dimen/zanrp_marginright"
                android:background="@drawable/tags_a2b_praise_btn"
                android:gravity="center"
                android:orientation="horizontal">
                <!--android:background="@drawable/praise_the_personality"-->
                <TextView
                    android:id="@+id/tv_zb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/tags_a2b_praise_heart"
                    android:drawablePadding="5dp"
                    android:text="赞人品"
                    android:textColor="#FF9277"
                    android:textSize="14dp" />
            </LinearLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/tv_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="13dp"
            android:text="姓名"
            android:textColor="@color/sys_darker_theme_text_color"
            android:textSize="14sp" />


        <!--<xj.property.widget.FilterFlowLayout-->
            <!--android:id="@+id/tags_flay"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="12dp"-->
            <!--android:layout_marginLeft="12dp"-->
            <!--android:layout_marginRight="12dp"-->
            <!--android:visibility="visible"-->
            <!--app:horizontalGap="6dp"-->
            <!--app:maxWidthRatio="0.5"-->
            <!--app:verticalGap="5dp">-->

            <!--<include-->
                <!--android:id="@+id/user_tags_add_rlay"-->
                <!--layout="@layout/common_tags_add_item" />-->

        <!--</xj.property.widget.FilterFlowLayout>-->


        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="8dp"-->
            <!--android:background="#f1f5f7" />-->


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#f1f5f7" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人品值："
                android:textColor="@color/white"
                android:textSize="@dimen/lifecircle_tv_title" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/lifecircle_bigger_likeicon"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="200"
                android:textColor="#fa5344"
                android:textSize="@dimen/lifecircle_tv_title" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="打败了40%的本小区居民！"
            android:textColor="@color/white"
            android:textSize="@dimen/lifecircle_tv_title"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/ll_rp_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="人品值："
                    android:textColor="#4cbe50"
                    android:textSize="17sp" />

                <ImageView

                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="3dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lifecircle_bigger_likeicon" />

                <TextView
                    android:id="@+id/tv_person_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fa5344"
                    android:textSize="17sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_character_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal|left"
                android:paddingRight="20dp"
                android:paddingTop="0dp"
                android:textColor="#4cbe50"
                android:textSize="17sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/sendwater_arrow"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_color" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f1f5f7" />
    <!--    <View
            android:layout_width="match_parent"
            android:layout_height="6dp"/>-->
</LinearLayout>