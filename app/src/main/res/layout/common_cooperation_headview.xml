<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f5f7"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/search_bar_bg"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_search_bar"
        android:paddingRight="@dimen/padding_search_bar"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="102dp"
            android:background="@color/white"
            android:src="@drawable/activity_search" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_search"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="@string/life_search_hint_txt"
            android:textColor="#c8c8c8"
            android:textColorHint="#c8c8c8"

            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_search"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:src="@drawable/search_clear"
            android:visibility="gone" />

    </LinearLayout>

    <xj.property.widget.MyListView
        android:id="@+id/lv_eva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61dp"
        android:layout_marginRight="61dp"
        android:divider="@null"
        android:dividerHeight="0dp"></xj.property.widget.MyListView>

</LinearLayout>