<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">
    
    <LinearLayout
        android:id="@+id/ll_banner1"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="23dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_bangzhu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:orientation="vertical">

            <xj.property.widget.CircleImageView
                android:id="@+id/avatar_fubangzhu1"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:src="@drawable/head_portrait_personage" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vote_fubangzhu"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bangzhu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <xj.property.widget.CircleImageView
                android:id="@+id/avatar_bangzhu"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:src="@drawable/head_portrait_personage" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vote_bangzhu"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bangzhu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

            <xj.property.widget.CircleImageView
                android:id="@+id/avatar_fubangzhu2"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:src="@drawable/head_portrait_personage" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vote_fubangzhu"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_banner2"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="23dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_tangzhu1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:orientation="vertical">

            <xj.property.widget.CircleImageView
                android:id="@+id/avatar_tangzhu1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/head_portrait_personage" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="13dp"
                android:src="@drawable/vote_tangzhu"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tangzhu2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:orientation="vertical">

            <xj.property.widget.CircleImageView
                android:id="@+id/avatar_tangzhu2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/head_portrait_personage" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="13dp"
                android:src="@drawable/vote_tangzhu"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tangzhu3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:orientation="vertical">

            <xj.property.widget.CircleImageView
                android:id="@+id/avatar_tangzhu3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/head_portrait_personage" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="13dp"
                android:src="@drawable/vote_tangzhu"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tangzhu4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:orientation="vertical">

            <xj.property.widget.CircleImageView
                android:id="@+id/avatar_tangzhu4"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/head_portrait_personage" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="13dp"
                android:src="@drawable/vote_tangzhu"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tangzhu5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:orientation="vertical">

            <xj.property.widget.CircleImageView
                android:id="@+id/avatar_tangzhu5"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/head_portrait_personage" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="13dp"
                android:src="@drawable/vote_tangzhu"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tangzhu6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <xj.property.widget.CircleImageView
                android:id="@+id/avatar_tangzhu6"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/head_portrait_personage" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="13dp"
                android:src="@drawable/vote_tangzhu"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="13dp"
        android:layout_marginBottom="14dp"
        android:gravity="center">

        <xj.property.widget.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="21dp"
            android:layout_gravity="center"
            android:src="@drawable/head_portrait_personage" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="11dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#525252"
                android:text="莎莎" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="#525252"
                android:text="本月积分：108分" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1D1D26"
                android:textSize="34dp"
                android:text="28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:textSize="16dp"
                android:textColor="#464646"
                android:text="NO" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#EEEEEE" />
</LinearLayout>


