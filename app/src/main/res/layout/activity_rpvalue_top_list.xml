<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xj.property.activity.LifeCircle.RPValueTopListActivity"
    android:background="#fff">
    <include layout="@layout/headtop"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:layout_height="169dp">
                <ImageView
                    android:id="@+id/big_img"
                    android:layout_width="match_parent"
                    android:layout_height="169dp"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/tv_commit_name"
                    android:visibility="gone"
                    />
                </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/zan_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获赞人品200"
            android:textSize="24sp"
            android:textColor="#4cbe50"/>
        <TextView
            android:id="@+id/top_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排名60"
            android:textSize="24sp"
            android:textColor="#4cbe50"
            android:layout_marginLeft="40dp"/>
        </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f1f5f7"/>

    <xj.property.widget.MyListView
        android:id="@+id/lv_top_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
