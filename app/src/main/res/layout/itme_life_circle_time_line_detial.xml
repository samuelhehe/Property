<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/img_father"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="25dp"
           >
            <LinearLayout
                android:id="@+id/rl_img_much"
                android:layout_width="@dimen/rl_size"
                android:layout_height="@dimen/rl_size"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/rl_itme_margin">
                    <ImageView
                        android:id="@+id/img_one"
                        android:layout_width="@dimen/rl_itme_size"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/default_avatar"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/img_three"
                        android:layout_width="@dimen/rl_itme_size"
                        android:layout_height="@dimen/rl_itme_size"
                        android:src="@drawable/default_avatar"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="@dimen/rl_itme_margin"
                         />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_two"
                        android:layout_width="@dimen/rl_itme_size"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/default_avatar"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:id="@+id/img_four"
                        android:layout_width="@dimen/rl_itme_size"
                        android:layout_height="@dimen/rl_itme_size"
                        android:src="@drawable/default_avatar"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="@dimen/rl_itme_margin"
                        />
                </LinearLayout>

                </LinearLayout>
            <ImageView
                android:id="@+id/img_only_one"
                android:layout_width="@dimen/rl_size"
                android:layout_height="@dimen/rl_size"
                android:visibility="gone"
                android:background="#fff"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar"
                />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="18dp">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="6"
                android:ellipsize="end"
                android:textColor="#000000"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                android:text="内容"
                />
            <TextView
                android:id="@+id/tv_photo_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="#848484"
                android:text="共8张"/>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:gravity="right|center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_axis_comment"
            />
        <TextView
            android:id="@+id/tv_comment_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#848484"
            android:textSize="12sp"
            android:text="12条"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:src="@drawable/time_axis_likeicon"
            />
        <TextView
            android:id="@+id/tv_praise_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="#848484"
            android:text="15"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:background="#e0e0e0"/>
</LinearLayout>