<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_call_high"
    android:background="@color/white"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/item_call_high"
        android:layout_marginLeft="10dp"
        android:layout_height="@dimen/item_call_high">

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/gray_normal" />

        <xj.property.widget.CircleImageView
            android:layout_width="@dimen/item_call_circle"
            android:layout_height="@dimen/item_call_circle"
            android:layout_gravity="center"
            android:src="@color/gray_normal" />


        <xj.property.widget.CircleImageView
            android:id="@+id/iv_circleshop"
            android:src="@drawable/sendwater_phone"
            android:layout_width="@dimen/item_call_circle"
            android:layout_height="@dimen/item_call_circle"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/MyTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_item_menu"
                android:textSize="@dimen/text2fonts" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/MyTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_item_menu"
                android:textSize="@dimen/text2fonts" />

            <TextView
                style="@style/MyTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
android:drawableLeft="@drawable/sendwater_time"
                android:gravity="right|center_vertical"
                android:textColor="@color/text_item_content"
                android:textSize="@dimen/text2fonts" />
            <TextView
                style="@style/MyTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
android:text="-"
                android:gravity="right|center_vertical"
                android:textColor="@color/text_item_content"
                android:textSize="@dimen/text2fonts" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="right|center_vertical"
                android:textColor="@color/text_item_content"
                android:textSize="@dimen/text2fonts" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/me_arrow"
        android:paddingRight="5dp"
        android:scaleType="matrix" />

</LinearLayout>