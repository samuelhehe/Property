<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa">

    <RelativeLayout
        android:id="@+id/msp_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="10dp"-->
            <!--android:background="#F4F4F4" />-->

        <LinearLayout
            android:id="@+id/msp_consume_list_llay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color" />

            <TextView
                android:id="@+id/msp_history_item_consumelist_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/msp_vip_card"
                android:drawablePadding="9dp"
                android:gravity="center_vertical"
                android:text="消费账单"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/msp_shop_consumelist_info_llay"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/msp_consume_list_llay"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/msp_shop_pic_iv"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/welfare_loading_pic" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/msp_shop_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="杨记牛肉拉面"
                    android:textColor="#323232"
                    android:textSize="17sp" />


                <RatingBar
                    android:id="@+id/msp_shop_star_rb"
                    style="@style/mspsmallRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/msp_shop_name_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="14dp" />


                <TextView
                    android:id="@+id/msp_shop_score_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/msp_shop_star_rb"
                    android:layout_toRightOf="@+id/msp_shop_star_rb"
                    android:text="5分"
                    android:textColor="#C6C6C6"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/msp_shop_total_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/msp_shop_score_tv"
                    android:layout_toRightOf="@+id/msp_shop_score_tv"
                    android:text="150单"
                    android:visibility="gone" />

            </RelativeLayout>


        </LinearLayout>

        <xj.property.widget.RoTateTextView
            android:id="@+id/msp_history_item_consume_discount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/msp_card_discount_circle20"
            android:gravity="center_horizontal|center_vertical"
            android:paddingRight="10dp"
            android:paddingTop="13dp"
            android:text="8.8折"
            android:textColor="#E49B94"
            android:textSize="23sp" />


        <View
            android:id="@+id/msp_consume_history_divierline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/msp_shop_consumelist_info_llay"
            android:background="@color/bg_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/msp_consume_history_divierline"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消费:"
                    android:textColor="#323232"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/msp_consume_rmb_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="9.9元"
                    android:textColor="#323232"
                    android:textSize="14sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/msp_consume_time_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2015-10-16 14:00"
                android:textColor="#9b9898" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>