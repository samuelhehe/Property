<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#fffffd">

    <include layout="@layout/common_bangzhu_headtop"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/sl_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="352dp"
                    android:layout_height="164dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_img"
                        android:layout_width="352dp"
                        android:layout_height="164dp"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="352dp"
                        android:layout_height="71dp"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:background="#000000" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:textColor="#4B4C50"
                    android:text="商家特色"
                    android:textSize="17dp"
                    android:layout_marginTop="17dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="69dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">


                    <ImageView
                        android:id="@+id/iv_tese1"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <ImageView
                        android:id="@+id/iv_tese2"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <ImageView
                        android:id="@+id/iv_tese3"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <ImageView
                        android:id="@+id/iv_tese4"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <ImageView
                        android:id="@+id/iv_tese5"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装修案例"
                    android:textColor="#4B4C50"
                    android:textSize="17dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp" />

                <ListView
                    android:id="@+id/lv_demo"
                    android:layout_marginTop="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"></ListView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设计团队"
                    android:textColor="#4B4C50"
                    android:textSize="17dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <xj.property.widget.CircleImageView
                        android:id="@+id/iv_devise1"
                        android:visibility="gone"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/arrow_down" />

                    <xj.property.widget.CircleImageView
                        android:id="@+id/iv_devise2"
                        android:visibility="gone"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/arrow_down" />

                    <xj.property.widget.CircleImageView
                        android:id="@+id/iv_devise3"
                        android:visibility="gone"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/arrow_down" />

                    <xj.property.widget.CircleImageView
                        android:id="@+id/iv_devise4"
                        android:visibility="gone"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/arrow_down" />

                    <xj.property.widget.CircleImageView
                        android:id="@+id/iv_devise5"
                        android:visibility="gone"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/arrow_down" />

                    <xj.property.widget.CircleImageView
                        android:id="@+id/iv_devise6"
                        android:visibility="gone"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/arrow_down" />

                    <xj.property.widget.CircleImageView
                        android:id="@+id/iv_devise7"
                        android:visibility="gone"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/arrow_down" />


                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="11dp"
                    android:background="#EEEEEE"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="21dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:textColor="#4B4C50"
                        android:textSize="17dp"
                        android:layout_marginTop="25dp"
                        android:text="谁看过这家公司" />

                    <LinearLayout
                        android:id="@+id/ll_looked"
                        android:layout_width="fill_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="14dp"
                        android:layout_height="36dp">

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_Looked1"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_Looked2"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_Looked3"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_Looked4"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_Looked5"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_Looked6"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_Looked7"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="12dp"
                        android:background="#EEEEEE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:textColor="#4B4C50"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:text="谁都在用这家公司" />

                    <LinearLayout
                        android:layout_marginTop="14dp"
                        android:id="@+id/ll_used"
                        android:layout_width="fill_parent"
                        android:orientation="horizontal"
                        android:layout_height="36dp">

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_used1"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_used2"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_used3"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_used4"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_used5"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_used6"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />

                        <xj.property.widget.CircleImageView
                            android:id="@+id/iv_used7"
                            android:visibility="gone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/arrow_down" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"
                        android:background="#EEEEEE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4B4C50"
                        android:text="用过的邻居怎么说"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:textSize="17dp" />

                    <ListView
                        android:id="@+id/lv_comment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">

                    </ListView>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="11dp"
                        android:layout_marginTop="8dp"
                        android:background="#EEEEEE" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/mobile" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="咨询电话：010-5854857"
                            android:textSize="14dp"
                            android:textColor="#4B4C50" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="13dp"
                        android:background="#EEEEEE" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="7dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/location" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公司地址：北京市东城区法华南里天华公馆209"
                            android:textSize="14dp"
                            android:textColor="#4B4C50" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:background="#EEEEEE" />


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="#4B4C50"
                        android:layout_marginTop="23dp"
                        android:layout_marginLeft="13dp"
                        android:text="工商注册信息" />

                    <TextView
                        android:id="@+id/tv_sign_data"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="13dp"
                        android:textSize="14dp"
                        android:textColor="#848484"
                        android:text="成立日期:2008-11-12" />

                    <TextView
                        android:id="@+id/tv_sign"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="13dp"
                        android:textSize="14dp"
                        android:textColor="#848484"
                        android:text="注册资金：100万" />

                    <TextView
                        android:id="@+id/tv_register"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="13dp"
                        android:textSize="14dp"
                        android:textColor="#848484"
                        android:layout_marginBottom="72dp"
                        android:text="登记机关：北京市工商行政管理局丰台分局" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_helpme"
                android:layout_width="fill_parent"

                android:layout_marginBottom="7dp"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:text="帮我免费设计"
                android:textSize="17dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#30cc71" />
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>
