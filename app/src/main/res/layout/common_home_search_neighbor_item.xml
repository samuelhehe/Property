<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_color_forsearch_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_neighbor_header_iv"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/head_portrait_personage"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/search_neighbor_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:text=""
            android:textColor="#464646"
            android:textSize="15sp" />

        <xj.property.widget.FilterFlowLayout
            android:id="@+id/search_neighbor_flay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            app:horizontalGap="6dp"
            app:maxLines="1">

        </xj.property.widget.FilterFlowLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_color_forsearch_line" />

</LinearLayout>