<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="325dp"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/login_box_bg"
    android:orientation="vertical">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/login_head_bg"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="登录后才能操作"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="999">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_go_regist"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="18dp"
                android:background="#4bb14e"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:text="没有账号请先注册"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="18dp"
                android:background="@color/white"
                android:hint="电话号码"
                android:inputType="phone"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textColor="@color/text_item_menu"
                android:textColorHint="@color/text_item_content"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textColor="@color/text_item_menu"
                android:textColorHint="@color/text_item_content"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_forgetpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:text="忘记密码?"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="80dp"

                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/register_btn_bg"
                    android:gravity="center"
                    android:text="马上注册"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="invisible" />


            </RelativeLayout>

        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@drawable/login_btn_bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#4bb14e"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/bg_color" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="登录"
            android:textColor="#4bb14e"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>
