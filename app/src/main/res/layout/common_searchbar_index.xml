<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/home_index_newtheme_color_green"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/invite_neighbor_home_tv"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="邀请"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/home_index_community_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/home_homeicon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/search_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/home_icon_search"
            android:visibility="visible" />

        <View
            android:id="@+id/last_sec"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/last_v"
            android:background="#6d9584" />

        <View
            android:id="@+id/last_v"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#ededed" />

    </RelativeLayout>

</LinearLayout>