<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#80000000">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:background="@drawable/white_button_selector_shape1">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#FF8838"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="25dp"
            android:text="确认码由您用过的装修公司提供"/>


        <EditText
            android:id="@+id/et_success"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:paddingLeft="14dp"
            android:layout_height="41dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="输入装修确认码"
            android:textColorHint="#D6D6D6"
            android:textSize="14dp"
            android:background="@drawable/white_button_selector_shape2"/>

        <EditText
            android:id="@+id/et_message"
            android:layout_marginTop="14dp"
            android:layout_width="fill_parent"
            android:layout_height="128dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingLeft="14dp"
            android:gravity="start"
            android:paddingTop="5dp"
            android:hint="输入评论内容"
            android:textColorHint="#D6D6D6"
            android:textSize="14dp"
            android:background="@drawable/white_button_selector_shape2"/>



        <TextView
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="2dp"
            android:background="#F0F0F0"
            />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
        
            <TextView
                android:id="@+id/tv_out"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="取消"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="#2FCC71"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#F0F0F0"
                />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="确认"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#2FCC71"/>
           
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
