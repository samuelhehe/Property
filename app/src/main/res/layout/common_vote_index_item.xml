<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_color_forvote"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/vote_index_item_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8.5dp"
                    android:text="投票发起人"
                    android:textColor="@color/sys_darker_69_theme_text_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/vote_index_item_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="8.5dp"
                    android:text="12-16"
                    android:textColor="@color/sys_darker_66_theme_text_color"
                    android:textSize="13sp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/vote_index_item_godetail_llay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5.5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--//provider_details_info_llay-->

                    <RelativeLayout
                        android:id="@+id/r1"
                        android:layout_width="43dp"
                        android:layout_height="wrap_content">

                        <xj.property.widget.CircleImageView
                            android:id="@+id/provider_details_iv_avtar"
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/default_avatar" />

                        <ImageView
                            android:id="@+id/provider_iv_user_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/provider_details_iv_avtar"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="-6dp"
                            android:src="@drawable/life_circle_bangzhu_icon"
                            android:visibility="gone" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/vote_header_info_rlay"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_alignTop="@+id/r1"
                        android:layout_toRightOf="@+id/r1">

                        <TextView
                            android:id="@+id/provider_details_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="小明"
                            android:textColor="@color/sys_darker_64_theme_text_color"
                            android:textSize="16sp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/vote_index_item_votednum_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/vote_label"
                                android:gravity="right|center_vertical"
                                android:paddingRight="12dp"
                                android:text="56人投票"
                                android:textColor="@color/sys_darker_66_theme_text_color"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vote_header_info_rlay"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/r1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vote_index_item_votecontent_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="15dp"
                            android:lineSpacingExtra="4dp"
                            android:text=""
                            android:textColor="@color/sys_darker_66_theme_text_color"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/panic_has_purchase_llay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="18.5dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="7.5dp"
                                android:layout_marginRight="12dp"
                                android:background="@color/bg_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投过票的邻居"
                                android:textColor="@color/sys_darker_68_theme_text_color"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="-5dp"
                                android:layout_marginTop="4dp"
                                android:gravity="left|center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/welfare_purchase_hasgoturs_lv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1"
                                    android:gravity="left|center_vertical"
                                    android:orientation="horizontal"></LinearLayout>

                            </LinearLayout>

                            <!--<View-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="0.3dp"-->
                            <!--android:layout_marginBottom="10dp"-->
                            <!--android:background="@color/bg_color" />-->
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/vote_index_item_result_llay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="18.5dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/bg_color" />

                            <LinearLayout
                                android:id="@+id/vote_index_item_rcontent_llay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="9dp"
                                android:orientation="vertical">

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                    <!--///  edge-->
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/vote_index_item_result_sh_btn"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:clickable="true"
                android:visibility="gone"
                android:orientation="vertical">

                <Button
                    android:layout_width="15dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:background="@drawable/vote_drop_down_arrow" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
