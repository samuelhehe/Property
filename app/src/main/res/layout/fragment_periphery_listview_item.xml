<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_item_father"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:minHeight="86dp"
        android:background="@drawable/note_the_background_map">

        <ImageView
            android:id="@+id/iv_avatar_of_panic_buying"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
           android:layout_toRightOf="@+id/iv_avatar_of_panic_buying"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_of_panic_buying"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="阿拉兰牛肉面套餐原价29,现价9.9，限时30天，限量100份"
                android:textColor="#ce8220"
                android:lineSpacingExtra="2dp"
                android:layout_marginRight="40dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_resttime_of_panic_buying"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="限时抢购剩余时间：10:01:01"
                android:textColor="#ff9000"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="7dp">
            <ImageView
                android:id="@+id/iv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_src_distance"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                android:text="15"
                android:textColor="@color/distance_value_color"/>
            </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="10dp"
        android:background="#d9d9d9" />


</LinearLayout>
