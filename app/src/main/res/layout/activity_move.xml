<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    <include
        layout="@layout/common_bangzhu_headtop">
    </include>

    <ImageView
        android:layout_width="85dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="67dp"
        android:src="@drawable/move_1"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="58dp"
        android:lineSpacingExtra="9dp"
        android:text="30天内只能搬家一次，只有您个人的基本资料将会搬到新小区，您当前获得的人品值、帮帮 券、帮帮币以及您发布的所有信息会保留在天华小区。"
        android:textSize="16dp"
        android:textColor="#666666"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/move_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="请谨慎使用此功能"
            android:textSize="14dp"
            android:textColor="#FF7200"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_move"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:background="#2FCC71"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="开始搬家"
        android:textColor="#ffffff"
        android:textSize="16dp" />

</LinearLayout>