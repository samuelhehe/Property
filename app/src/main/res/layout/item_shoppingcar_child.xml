<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:background="#ffffff"
                android:padding="5dp">

    <CheckBox
        android:id="@+id/cb_child_status"
        style="@style/CustomCheckboxTheme_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        />
    <!-- style="@style/CustomCheckboxTheme_cat"-->

    <ImageView
        android:id="@+id/iv_shop_image"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/cb_child_status"
        android:src="@drawable/default_picture"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_shop_image"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <TextView
            android:paddingLeft="2dp"
            android:id="@+id/tv_goodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:text="小间物业坚果食品特产好吃不贵"
            android:textColor="@color/gray_normal"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goodname"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/bt_goodcount_sub"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@drawable/sub"/>
            <TextView
                android:layout_marginLeft="13dp"
                android:textColor="#333333"
                android:textSize="18sp"
                android:text="X"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:gravity="center_horizontal"
                android:text="1"
                android:textColor="#333333"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/bt_goodcount_add"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="15dp"
                android:background="@drawable/add_cat"/>
<View
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_sum_price_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="￥0"
                android:textColor="@color/item_fix_doing"
                android:textSize="18sp"/>
        </LinearLayout>


    </RelativeLayout>




</RelativeLayout>